<thlogic>
    <attr sel="#headId" th:replace="~{fragments/header::headerFragment}"/>
    <attr sel="gameTitle" th:text="#{game.title}"/>
    <attr sel="#mainMessage" th:text="${__${T(com.aaroncarlson.util.constants.AttributeNames).MAIN_MESSAGE}__}"/>
    <attr sel="#resultMessage" th:text="${__${T(com.aaroncarlson.util.constants.AttributeNames).RESULT_MESSAGE}__}"/>
    <attr sel="#gameForm" th:action="@{__${T(com.aaroncarlson.util.constants.Mappings).PLAY}__}"/>
    <attr sel="#enterGuess" th:text="#{game.enter.guess}"/>
    <attr sel="#submit" th:value="#{game.submit}"/>
    <attr sel="#footerId" th:replace="~{fragments/footer::footerFragment}"/>
</thlogic>
